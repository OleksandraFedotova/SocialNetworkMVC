@model List<SocialNetworkMVC.Models.Todo>

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<div>
    <h4>Todo</h4>
    <hr />
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => Model.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(model => Model.FirstOrDefault().CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => Model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => Model.FirstOrDefault().IsComlete)</th>
        </tr>
        @foreach (var todo in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => todo.Id)</td>
            <td>@Html.DisplayFor(model => todo.CreatedAt)</td>
            <td>@Html.DisplayFor(model => todo.Name)</td>
            <td>@Html.DisplayFor(model => todo.IsComlete)</td>
        </tr>
        }
    </table>
</div>
