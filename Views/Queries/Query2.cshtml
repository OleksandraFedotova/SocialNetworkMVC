@model List<SocialNetworkMVC.Models.Comment>
@{
    ViewData["Title"] = "View";
}

<h2>2.Get a list of comments under the posts of a particular user (on id), where body comment < 50 characters (list of comments)</h2>
<form class="form" id="searchForm" action="@Url.Action("Query2", "Queries")" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-10">
                <label for="address" class="sr-only">Get Post Count</label>
                <input type="number" class="form-control" id="address" placeholder="User Id" name="userId" required>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-2">
                <input type="submit" class="btn btn-block btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>

@if (Model != null)
{
<div>
    <table>
        <tr>
            <th>Craeted At</th>
            <th>Body</th>
            <th>Likes</th>
        </tr>
        @foreach (var elem in Model)
        {
            <tr onclick="location.href='@Url.Action("TodoById", "Todos", new { id=elem.Id})'" style="cursor:pointer">
                <td class="col-md-3">@elem.CreatedAt</td>
                <td class="col-md-6">@elem.Body</td>
                <td class="col-md-3">Likes = @elem.Likes</td>
            </tr>

        }
    </table>
    </div>
}
